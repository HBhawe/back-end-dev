<%- include('partials/header.ejs')%>


<% if (locals.new) {%>
<div class="new-book-form">
    <h4>New book</h4>
    <form action="/new" method="POST">
        <div class="form-group">
            <div class="input-group">
                <label for="title">Title:</label>
                <input type="text" name="title" id="title" required>
            </div>
            <div class="input-group">
                <label for="author">Author:</label>
                <input type="text" name="author" id="author" required>
            </div>
            <div class="input-group">
                <label for="dateRead">Date Read:</label>
                <input type="date" name="dateRead" id="dateRead">
            </div>
            <div class="input-group">
                <label for="rating">Rating: (1 is lowest, 5 is highest)</label>
                <input type="range" min="1" max="5" class="slider" id="rating" step="1" list="ratings" value="3" name="rating">
                <datalist id="ratings">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </datalist>
            </div>
            <div class="input-group">
                <label for="olid">OLID:</label>
                <input type="text" name="olid" id="olid">
            </div>
            <div class="input-group">
                <label for="note">Note:</label>
                <textarea name="note" id="note"></textarea>
            </div>
            <div class="input-group">
                <input type="submit" value="Submit">
            </div>
        </div>
    </form>
</div>

<% } else { %>
    <div class="edit-book-form">
        <h4>New book</h4>
        <form action="/edit/<%=book.id%>" method="POST">
            <div class="form-group">
                <div class="input-group">
                    <label for="title">Title:</label>
                    <input type="text" id="title" value="<%= book.name%>" disabled>
                </div>
                <div class="input-group">
                    <label for="author">Author:</label>
                    <input type="text" id="author" value="<%= book.author%>" disabled>
                </div>
                <div class="input-group">
                    <label for="dateRead">Date Read:</label>
                    <input type="date" name="dateRead" id="dateRead">
                </div>
                <div class="input-group">
                    <label for="rating">Rating: (1 is lowest, 5 is highest)</label>
                    <input type="range" min="1" max="5" class="slider" id="rating" step="1" list="ratings" value="<%=book.rating%>" name="rating">
                    <datalist id="ratings">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                    </datalist>
                </div>
                <div class="input-group">
                    <label for="olid">OLID:</label>
                    <input type="text" name="olid" id="olid" disabled value="<%=book.olid%>">
                </div>
                <div class="input-group">
                    <label for="note">Note:</label>
                    <textarea name="note" id="note"></textarea>
                </div>
                <div class="input-group">
                    <input type="submit" value="Submit">
                </div>
            </div>
        </form>
    </div>

<% }%>
<%- include('partials/footer.ejs')%>